<style>
  body {
    padding-top: 64px;
  }

  #navbar {
    height: 64px;
    transition: transform 0.5s ease, opacity 0.3s ease-in;
  }

  .nav-link {
    position: relative;
    transition: color 0.3s ease-in-out;
  }
  .nav-link::after {
    content: "";
    position: absolute;
    left: 50%;
    bottom: -2px;
    width: 0;
    height: 2px;
    background-color: currentColor;
    transition: width 0.3s ease-in-out, left 0.3s ease-in-out;
  }
  .nav-link:not(.active-link):hover::after {
  width: 100%;
  left: 0;
  }


  .active-link::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 100%;
    height: 2px;
    background-color: currentColor;
  }

  #mobile-menu-dropdown {
    display: none;
    transition: all 0.3s ease-in-out;
  }
</style>

<header id="navbar" class="bg-white shadow-md fixed top-0 left-0 w-full">
  <nav class="max-w-4xl mx-auto flex justify-between items-center p-4">
    <a href="/" class="text-xl font-bold text-gray-800">Tymur Buiadzhi</a>
    
    <button id="mobile-menu-button" class="md:hidden focus:outline-none">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>

    <div id="desktop-menu" class="hidden md:flex space-x-8">
      <a href="/" class="nav-link text-gray-600 hover:text-gray-900">Home</a>
      <a href="/blog/" class="nav-link text-gray-600 hover:text-gray-900">Blog</a>
      <a href="/cv/" class="nav-link text-gray-600 hover:text-gray-900">CV</a>
      <a href="/contact-page/" class="nav-link text-gray-600 hover:text-gray-900">Contact</a>
    </div>
  </nav>
  
  <div id="mobile-menu-dropdown" class="md:hidden bg-white shadow-md">
    <a href="/" class="block px-4 py-3 text-lg tracking-wide text-gray-600 hover:bg-gray-100 border-t border-gray-200">Home</a>
    <a href="/blog/" class="block px-4 py-3 text-lg tracking-wide text-gray-600 hover:bg-gray-100 border-t border-gray-200">Blog</a>
    <a href="/cv/" class="block px-4 py-3 text-lg tracking-wide text-gray-600 hover:bg-gray-100 border-t border-gray-200">CV</a>
    <a href="/contact-page/" class="block px-4 py-3 text-lg tracking-wide text-gray-600 hover:bg-gray-100 border-t border-gray-200">Contact</a>
  </div>
</header>

<script>
  let lastScrollY = window.scrollY;
  let navbar = document.getElementById('navbar');
  let mobileMenuDropdown = document.getElementById('mobile-menu-dropdown');
  let mobileMenuButton = document.getElementById('mobile-menu-button');
  let scrollThreshold = 50;
  let accumulatedScroll = 0;
  let isScrollingDown = false;

  window.addEventListener('scroll', () => {
    let scrollDifference = window.scrollY - lastScrollY;
    accumulatedScroll += scrollDifference;

    if (accumulatedScroll > scrollThreshold) {
      isScrollingDown = true;
      accumulatedScroll = 0;
    } else if (accumulatedScroll < -scrollThreshold) {
      isScrollingDown = false;
      accumulatedScroll = 0;
    }

    navbar.style.transform = isScrollingDown ? 'translateY(-100%)' : 'translateY(0)';
    lastScrollY = window.scrollY;
  });

  mobileMenuButton.addEventListener('click', () => {
    mobileMenuDropdown.style.display = mobileMenuDropdown.style.display === 'block' ? 'none' : 'block';
  });

  window.addEventListener('resize', () => {
    if (window.innerWidth >= 768) {
      mobileMenuDropdown.style.display = 'none';
    }
  });

  document.addEventListener("DOMContentLoaded", () => {
    let currentPath = window.location.pathname;
    document.querySelectorAll(".nav-link").forEach(link => {
      if (link.getAttribute("href") === currentPath) {
        link.classList.add("active-link");
      } else {
        link.classList.remove("active-link");
      }
    });
  });
</script>