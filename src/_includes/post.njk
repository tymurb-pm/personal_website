---
title: "{{ title }} - Blog"
layout: "base.njk"
---

<div class="post-wrapper">
    <a href="/blog" class="back-link">&larr; Back to Blog</a>

    <h1 class="text-3xl font-bold">{{ title }}</h1>
    <div class="meta">
        <span>{{ date | date }}</span>
        <span>â€¢</span>
        <span>{{ (content | striptags | length / 1150) | round }} min read</span>
    </div>

    <article class="prose lg:prose-xl">
        {{ content | safe }}
    </article>

    {% if tags %}
        <div class="tags">
            {% for tag in tags %}
                <a href="/tags/{{ tag }}" class="tag">{{ tag }}</a>
            {% endfor %}
        </div>
    {% endif %}
</div>
